
<%= content_for(:menu_items) do %>
    <% @cinemas.each do |cinema| %>
                <li><a href="#<%= cinema %>"><%= cinema.name.gsub("London - ", "") %> </a></li>
    <% end %>
<% end %>

<% @cinemas.each do |cinema| %>
    <div class="row">
        <h3 id="<%= cinema %>"><%= cinema %></h3>
    </div>
    
    <% unless cinema.performances.current.empty? %>
	   <% cinema.films.each do |film| %>
        
            <div class="row film <%= cycle('odd', 'even') %>">
    		      <div class="col-md-2 col-xs-4">
                                        <a href="<%= film.film_url %>"><img src="<%= film.poster_url %>"/></a>
                                    </div>
                                    <div class="col-md-10 col-xs-8">
                                        <a href="<%= film.film_url %>"><span class="filmtitle"><%= film.title %></span></a>
                                         <%# film descriptions should go here %>
                                        <p>
                                         <% cinema.performances.current.where(film_id: film.id).each do |performance| %>
                                            <%= link_to performance.short_time, performance.booking_url, :class => "badge" %>
                                         <% end %>
                                         </p>
                                    </div>
                                </div>
        <% end %>

    <% else %>
    		 <p>There are no more performances for today in this cinema.</p>
    <% end %>
	
<% end %>